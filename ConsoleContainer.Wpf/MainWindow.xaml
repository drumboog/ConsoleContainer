<Window x:Class="ConsoleContainer.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConsoleContainer.Wpf"
        xmlns:vm="clr-namespace:ConsoleContainer.Wpf.ViewModels"
        mc:Ignorable="d"
        Title="Console Container" Height="450" Width="800">
    <Window.Resources>
        <vm:ProcessContainerVM x:Key="DesignViewModel" />
    </Window.Resources>
    <Window.DataContext>
        <Binding Source="{StaticResource DesignViewModel}" />
    </Window.DataContext>
    <TabControl ItemsSource="{Binding Processes}" TabStripPlacement="Left">
        <TabControl.Template>
            <ControlTemplate TargetType="TabControl">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <ScrollViewer HorizontalScrollBarVisibility="Hidden"
                                  VerticalScrollBarVisibility="Auto" >
                        <TabPanel x:Name="HeaderPanel"
                          Panel.ZIndex ="1" 
                          KeyboardNavigation.TabIndex="1"
                          Grid.Column="0"
                          Grid.Row="0"
                          Margin="2,2,2,2"
                          IsItemsHost="true"
                          Background="LightGray" />
                    </ScrollViewer>
                    <ContentPresenter x:Name="PART_SelectedContentHost"
                                      SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                      Margin="{TemplateBinding Padding}"
                                      ContentSource="SelectedContent" Grid.Column="1"/>
                </Grid>
            </ControlTemplate>
        </TabControl.Template>
        <TabControl.ItemContainerStyle>
            <Style TargetType="TabItem">
                <Setter Property="Header" Value="{Binding DisplayName}"/>
            </Style>
        </TabControl.ItemContainerStyle>
        <TabControl.ContentTemplate>
            <DataTemplate>
                <local:ProcessControl Process="{Binding .}"></local:ProcessControl>
            </DataTemplate>
        </TabControl.ContentTemplate>
    </TabControl>
</Window>
